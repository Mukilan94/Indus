
@model WellAI.Advisor.Model.Administration.SubscriptionViewModel
@using Kendo.Mvc.UI
<div class="row">
    <div class="col-md-12 errors"></div>
    @Html.HiddenFor(x => x.Id)
</div>
<div class="row">
    <div class="col-md-3">@Html.LabelFor(x => x.Name)</div>
    <div class="col-md-9">
        @Html.TextBoxFor(model => model.Name, new { style = "width:100%" })
        @Html.ValidationMessageFor(model => model.Name)

    </div>
</div>
<div class="row">
<div class="col-md-3">@Html.LabelFor(x => x.Price)</div>
<div class="col-md-9">
    @Html.TextBoxFor(model => model.Price, new { style = "width:100%" })
    @Html.ValidationMessageFor(model => model.Price)

</div>
</div>
<div class="row">
<div class="col-md-3">@Html.LabelFor(x => x.Description)</div>
<div class="col-md-9">
    @Html.TextAreaFor(model => model.Description, new { style = "width:100%" })
    @Html.ValidationMessageFor(model => model.Description)

</div>
</div>