@using Kendo.Mvc.UI.Fluent;
@model List<Kendo.Mvc.UI.PanelBarItemModel>

<ul class="sidebar-menu" data-widget="tree">
    @if (Model != null)
    {
        @foreach (var navItem in Model)
        {

            if (!navItem.Items.Any())
            {
                string selected = navItem.Selected ? "selectedsidenavroot" : "";
                <li class="active @selected">
                    <a href="@navItem.Url">
                        <i class="@navItem.SpriteCssClass"></i> <span class="navtextadmin">@navItem.Text</span>
                    </a>
                </li>
            }
            else
            {
                string menuopen = "menu-open";
                string display = "display:block;";
                string selected = navItem.Selected ? "selectedsidenavroot" : "";
                <li class="treeview @menuopen @selected">

                    <a href="#" onclick="event.stopPropagation();">
                        <i class="@navItem.SpriteCssClass"></i> <span class="navtextadmin">@navItem.Text</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-right pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu" style="@display">
                        @foreach (var navsubItem in navItem.Items)
                        {
                            selected = navsubItem.Selected ? "selectedsidenav" : "";
                        <li class="navtextadmin @selected"> <a href="@navsubItem.Url"> <i class="@navsubItem.SpriteCssClass"></i> @navsubItem.Text</a></li>
                        }
                    </ul>
                </li>
            }
        }
    }
</ul>
