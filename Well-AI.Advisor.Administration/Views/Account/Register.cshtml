@model WellAI.Advisor.Model.Administration.RegisterStaffViewModel

@{
    ViewBag.Title = "User Registration";
}
<style>
    .content-wrapper, .main-footer {
        margin-left: 0px !important;
    }
</style>
<div>
    <div class="row login-row">
        <div class="col-md-5 login-logo"></div>
        <div class="col-md-2" style="padding-top:10%;">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" ></label>
                        <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-action="login">Log in</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-5"></div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link href="~/css/common.css" rel="stylesheet" />
<style>
    .navbar-custom-menu {
        display: none;
    }
</style>