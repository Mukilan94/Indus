@model WellAI.Advisor.Model.Tenant.Models.CrmComments
@using System.Collections.Generic;
@using Kendo.Mvc.UI
@{
 
}
<div class="row">
    <div class="col-md-12 errors"></div>
</div>
<div class="row">
    @Html.HiddenFor(model => model.CompanyId)
    <div class="col-md-2">
        <div class="k-edit-label">
                        
            @Html.LabelFor(model => model.ContactId, "Contact")
        </div>
    </div>
    <div class="col-md-10">
        <div class="k-edit-field">

                    @(Html.Kendo().DropDownListFor(model => model.ContactId)
                     
                      .DataTextField("ContactName")
                      .DataValueField("ContactId")
                      .DataSource(source =>
                      {
                          source.Read(read =>
                          {
                              read.Action("ContactList", "CRM");
                          }).ServerFiltering(false);
                      })
                      .AutoBind(true)
                      .HtmlAttributes(new { style = "width: 100%" , @Class = "form-control" })
            )
               

        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        <div class="k-edit-label">
            Notes
        </div>
    </div>
    <div class="col-md-10">
        <div class="k-edit-field">
     
        @Html.TextAreaFor(model => model.Body, new { @Class = "form-control", required = "required", @maxlength = "400", style="height:250px" })
        @Html.ValidationMessageFor(model => model.Body)
        </div>
    </div>
</div>
  
<script>

        
    $(document).ready(function () {
        
        $(".k-grid-update").click(function () {
           
            setTimeout(function () {
                $('#CompanyNotesGrid').data('kendoGrid').dataSource.read().then(function () {
                    $('#CompanyNotesGrid').data('kendoGrid').refresh();
                });
            }, 2000);
        });

    });

    function Contact() {
        return {
            ContactId: $("#ddlchecklistRigs").val()
        };
    }

</script>
