            <div class="k-edit-label">
                @Html.LabelFor(model => model.Email, "Email")
            </div>
            <div class="k-edit-field">
                @Html.TextBoxFor(model => model.Email, new { @Class = "k-textbox", @type = "Email" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
