            <div class="k-edit-label">
                @Html.LabelFor(model => model.Fax, "Fax")
            </div>
            <div class="k-edit-field">
                @Html.TextBoxFor(model => model.Fax, new { @Class = "k-textbox", @id = "txtfax", @maxlength = "100" })
                @Html.ValidationMessageFor(model => model.Fax)
