<script type="text/javascript">
    $(document).ready(function () {
        $("#txtcity").keydown(function (e) {
            var pattern = /^[a-zA-Z ]+$/;
            if (!pattern.test(e.key) && e.key != '') {
                return false;
            }
        });
    });
</script>
