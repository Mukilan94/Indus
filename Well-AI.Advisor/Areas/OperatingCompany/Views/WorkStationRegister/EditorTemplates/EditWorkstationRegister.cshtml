@using System.Collections.Generic;
@model WellAI.Advisor.Model.OperatingCompany.Models.WorkstationModel
@{
	ViewData["Title"] = "Add/Update Workstation";
}
<div class="col-md-12">
	<div class="row">

		<div class="col-6">
			<div class="k-edit-label" style="padding-right: 5%;">
				@Html.LabelFor(model => model.DeviceName, "Device Name")
			</div>
			<div class="k-edit-field">
				@Html.TextBoxFor(model => model.DeviceName, new { @Class = "k-textbox", required = "required", validationmessage = "The Device Name is required" })
				@Html.ValidationMessageFor(model => model.DeviceName)
			</div>
		</div>
		<div class="col-6">
			<div class="k-edit-label" style="padding-right: 5%;">
				@Html.LabelFor(model => model.WorkstationIdentifier, "WorkstationId")
			</div>
			<div class="k-edit-field">
				@Html.TextBoxFor(model => model.WorkstationIdentifier, new { @Class = "k-textbox",required="required",validationmessage= "The Workstation Identifier is required" })
				@Html.ValidationMessageFor(model => model.WorkstationIdentifier)
			</div>
		</div>
	</div>
	<div class="row-fluid">
		
		
		<div class="col-12 switchwrap">
			<div>
				@Html.LabelFor(model => model.IsActive, "Active")
			
						@Html.HiddenFor(model => model.IsActive ,new {@Class="toggelVal"})
					
					@(Html.Kendo().Switch().Enabled(true)
		.Messages(c => c.Checked("Active").Unchecked("Inactive"))
		.Name("WorkstationStatus") // The name of the Switch is mandatory. It specifies the "id" attribute of the widget.
		 .Events(ev => ev.Change("OnStatusChange"))
    )

			</div>
		</div>
</div>
<style>

	.k-link k-state-selected {
		padding-top: 17px !important;
	}

	.k-pager-numbers {
		padding-top: 17px !important;
	}

	.switchwrap .k-tooltip-validation {
		display: none !important;
	}


	.switchlbl {
		display: inline-block;
		margin-top: 20px;
		width: 85%
	}

	.k-switch-off .k-switch-container {
		background-color: #c1c2c3 !important;
	}

	.switchwrap .k-switch {
		margin-bottom: 20px;
		width: 10%;
		vertical-align: baseline;
		margin-left: 10px;
	}
</style>
<script type="text/javascript" language="javascript">
	$(document).ready(function () {
		var secval = $('.toggelVal').val(); 
		if (secval == "true") {
			$("#WorkstationStatus").data("kendoSwitch").toggle();
			$(".switchwrap .k-switch-label-on").show();
			$(".switchwrap .k-switch-label-off").hide();
		}
		else {
			$(".switchwrap .k-switch-label-on").hide();
			$(".switchwrap .k-switch-label-off").show();
			
		}
	});
	
	
</script>