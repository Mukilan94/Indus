@model Microsoft.AspNetCore.Identity.IdentityRole;
@{
    var roles = (List<Microsoft.AspNetCore.Identity.IdentityRole>)ViewData["roles"];
    <div class="row">
        <div class="col-md-7" style="padding-left:10%;">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span id="errorMessage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" onclick="return validateAddRole();" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
<style>
    .k-link k-state-selected {
        padding-top: 17px !important;
    }
    .k-pager-numbers {
        padding-top: 17px !important;
    }
</style>