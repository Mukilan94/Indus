        var dataItem = e.sender.dataItem();
        console.log('OnWellChange ' + dataItem);

        console.log('OnWellChange ' + dataItem.wellId);

        var cookiewellid = getCookie("wellIdCookie");
            setCookie("wellIdCookie", dataItem.wellId);
       
        setTimeout(function () {
