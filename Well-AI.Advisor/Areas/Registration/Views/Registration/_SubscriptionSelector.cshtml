@*<div class="login-row">*@

<div class="container">
    <div class="header"><h1>Welcome to WELL-AI</h1><br></div>
    @*<div class="row col-xl-11" style="color: #0966e0"><h2>Flexible Plans</h2><br></div>*@
    <div class="row col-lg-12" style="margin-left:48%">
        <h3>
            We got a Pricing Plan
            that's perfect for you
        </h3>
        <br>
    </div>
    <div class="row col-lg-12" style="margin-left:70%">
        <h4 style="font-size:17px;">Select a Subscription Type</h4>

    </div>
    <div class="card border-success mb-2" style="min-width:23rem; border: 2px solid #338050 !important; ">
        <div class="card-header cardheadeselect text-center" style="margin:10px;color:white;">
            <h5 id="DispatchName">@Model.SubscriptionDetails.DispatchName</h5>
            <h4></h4>
        </div>
        <div class="card-body cardbodycenter text-lg-center" style="color: #338050; ">
            <h4>Monthly</h4>
            <h6>$ @Model.SubscriptionDetails.DispatchUnitPrice / User</h6>
            <input type="hidden" id="hdnDispatchPrice" value=@Model.SubscriptionDetails.DispatchUnitPrice />
            <h4></h4>
            <p style="text-align:left">
                <input id="hdnDispatch" type="hidden" value='@Model.SubscriptionDetails.DispatchDescription' />
                <ul class="nav_list_ap" id="uldispatch"></ul>
            </p>
        </div>
        <div class="card-footer bg-transparent border-success bordersuccessselect">
            <span id="mySpan" style="border-block-color: #338050; color: #338050">
                <input type="checkbox" class="checkbox" value="update" style="color: #338050; " id="chkDispatch" name="chkDispatch">
                    Subscribe
            </span>
        </div>
    </div>
    <div class="card border-success mb-2" style="min-width: 23rem; border: 2px solid #3b6da5 !important; ">
        <div class="card-header cardheadeselect text-center" style="margin: 10px; color: white; background-color: #3b6da5; ">
            <h5 id="ProviderName">@Model.SubscriptionDetails.ProviderName</h5>
            <h4></h4>
        </div>
        <div class="card-body cardbodycenter text-lg-center" style="color: #254678; ">
            <h4>Monthly</h4>
            <h6 >$ @Model.SubscriptionDetails.ProviderUnitPrice / User</h6>
               <input type="hidden" id="hdnProviderPrice" value=@Model.SubscriptionDetails.ProviderUnitPrice />
            <h4></h4>
            <p style="text-align:left">
                <input id="hdnProvider" type="hidden" value='@Model.SubscriptionDetails.ProviderDescription' />
                <ul class="nav_list_ap" id="ulprovider"></ul>
            </p>
        </div>
        <div class="card-footer bg-transparent border-success">
            <span style="color: #254678">
                <input type="checkbox" class="checkbox" value="update" id="chkProvider" name="chkProvider"onclick="uncheck()">
                    Subscribe
            </span>
        </div>
    </div>
    <div class="card border-success mb-2" style="min-width: 23rem; border: 2px solid #007afc !important; ">
        <div class="card-header text-center" style="margin:10px;color:white;">
            <h5 id="OperatorName">@Model.SubscriptionDetails.OperatorName</h5>
            <h4></h4>
        </div>
        <div class="card-body cardbodycenter text-lg-center" style="color: #007afc; ">
            <h4>Monthly</h4>
            <h6>$ @Model.SubscriptionDetails.OperatorUnitPrice / Rig</h6>
            <input type="hidden" id="hdnOperatorPrice" value=@Model.SubscriptionDetails.OperatorUnitPrice />
            <h4></h4>
            <p style="text-align:left">
                <input id="hdnOperator" type="hidden" value='@Model.SubscriptionDetails.OperatorDescription' />
                <ul class="nav_list_ao" id="uloperator"></ul>
            </p>
        </div>
        <div class="card-footer bg-transparent border-success1">
            <span style="color: #007afc" id="mySpan">
                <input type="checkbox" class="checkbox" value="update"style="color: #007afc"id="chkOperator" name="chkOperator"onclick="uncheck1()">  Subscribe
            </span>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var DispatchvalDescription = $("#hdnDispatch").val();
        $("#uldispatch").html(DispatchvalDescription);

        var ProvidervalDescription = $("#hdnProvider").val();
        $("#ulprovider").html(ProvidervalDescription);

        var OperatorvalDescription = $("#hdnOperator").val();
        $("#uloperator").html(OperatorvalDescription);

    });

    function uncheck1() {
        if ($(chkOperator.checked == true)) {
            document.getElementById('chkProvider').checked = false;
        }
        else {
            document.getElementById('chkProvider').checked = true;
        }
    }
    function uncheck() {
        if ($(chkProvider.checked == true)) {
            document.getElementById('chkOperator').checked = false;
        }
        else {
            document.getElementById('chkOperator').checked = true;
        }
    }
    </script>
