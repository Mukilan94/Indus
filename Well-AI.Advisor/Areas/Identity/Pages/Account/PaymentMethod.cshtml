@page
@model PaymentMethodModel
@{
    ViewData["Title"] = "Payment Method";
}
<div class="row login-row">
    <div class="col-md-4 login-logo"></div>
    <div class="col-sm-4" style="padding-top:6.5%;">
        <div class="blockstyle">
            <!-- small box -->
            <div class="small-box box-shad">
                <div class="inner">
                    <section>
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input type="hidden" asp-for="Input.UserId" />
                            <div class="form-group row">
                                <label asp-for="Input.CustomerName" class="col-sm-5">Name on Card</label>
                                <div class="col-sm-5">
                                    <input asp-for="Input.CustomerName" class="form-control" />
                                    <span asp-validation-for="Input.CustomerName" class="text-danger"></span>
                                </div>
                                <div class="col-sm-2"></div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Input.CreditCardNumber" class="col-sm-5">Card Number</label>
                                <div class="col-sm-5">
                                    <input asp-for="Input.CreditCardNumber" maxlength="16" class="form-control" />
                                    <span asp-validation-for="Input.CreditCardNumber" class="text-danger"></span>
                                </div>
                                <div class="col-sm-2"></div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Input.ValidUptoDate" class="col-sm-5">Expiration</label>
                                <div class="col-sm-5">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <input asp-for="Input.ValidUptoMonth" placeholder="MM" maxlength="2" class="form-control" />
                                        </div>/
                                        <div class="col-md-4">
                                            <input asp-for="Input.ValidUptoYear" placeholder="YYYY" maxlength="4" class="form-control" />
                                        </div>
                                    </div>
                                    <span asp-validation-for="Input.ValidUptoMonth" class="text-danger"></span>
                                    <span asp-validation-for="Input.ValidUptoYear" class="text-danger"></span>
                                </div>
                            </div>
                            @if (Model.Input.PaymentMethod != null)
                            {
                                <a class="k-button btn-default" href="/Identity/Account/Subscription?userId=@Model.Input.UserId">Back</a>
                            }
                            <button type="submit" class="btn btn-primary float-right" style="background-color:#007bff">Save and Continue</button>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link href="~/css/common.css" rel="stylesheet" />
<script src="~/js/paymentmethod.js"></script>
<style>
    .col-md-4 span {
        color: #000000;
    }

    .form-group label {
        color: #000000;
    }

    .blockstyle {
        padding: 0px;
         margin: 10px 10px 0 10px;
        background-color: #fff;
        border: 4px solid #007AFC;
        border-radius: 10px;
        position: relative;
        color: #000000;
    }

    .box-shad {
        box-shadow: none;
    }

    .dashboard-total {
        color: #000;
        font-size: 14px;
    }

    .dashboard-total {
        width: 80px;
        text-align: center;
        font-size: x-large
    }

    .k-edit-buttons {
        border-style: none;
    }

    .k-dropdown .k-dropdown-wrap .k-input {
        background-color: #fff;
        color: #000 !important;
    }

    .k-dropdown {
        width: 100% !important;
    }

        .k-dropdown .k-dropdown-wrap .k-select {
            color: #000;
            background-color: #fff;
        }

    #inputstate, #inputcategory {
        height: 0px;
    }
    .inner
    {
        min-height:180px !important;
        height:auto !important;
    }
</style>