@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

    <div class="row login-row">
        <div class="col-md-5 login-logo"></div>
        <div class="col-md-2" style="padding-top:10%;">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            @*<a asp-page="./RegisterWithSubscription" asp-route-returnUrl="@Model.ReturnUrl">Register your company</a>*@
                            @*<a id="registerpackage" asp-page="./Registration">Register your company</a>*@
                            <a id="registerpackage" href="/Registration">Register your company</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-5"></div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
