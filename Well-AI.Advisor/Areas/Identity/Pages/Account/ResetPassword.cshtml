@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="row login-row">
    <div class="col-md-3 login-logo"></div>
    <div class="col-md-8" style="padding-top:6.5%;">
        <section>
            <div class="row">
                <div class="col-md-6" style="padding-left:10%;">
                    <h4>Reset your password.</h4>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-6" style="padding-left:10%;">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input asp-for="Input.Code" type="hidden" />
                        <div class="form-group row">
                            <label asp-for="Input.Email" class="col-sm-5"></label>
                            <div class="col-sm-7">
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Input.Password" class="col-sm-5"></label>
                            <div class="col-sm-7">
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Input.ConfirmPassword" class="col-sm-5"></label>
                            <div class="col-sm-7">
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-3" style="margin-left:-3%"></div>
                            <button type="submit" class="btn btn-primary" style="background-color:#007bff">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-1"></div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link href="~/css/common.css" rel="stylesheet" />
