@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="row login-row">
    <div class="col-md-4 login-logo"></div>
    <div class="col-sm-4" style="padding-top:6.5%;">
        <div class="blockstyle">
            <!-- small box -->
            <div class="small-box box-shad">
                <div class="inner">
                    <section>
                        <div style="padding-bottom:5%;">
                            <span class="dashboard-total" style="text-align:center">
                                Please enter your recovery email.  If you are unable to access that account or do not remember your Recovery Email then please contact customer support for assitance.
                            </span>
                            <form method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row">
                                    <div class="col-sm-10">
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div><div class="col-sm-2">
    <button type="submit" class="btn btn-primary" style="background-color:#007bff">Submit</button>
</div>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>
<link href="~/css/common.css" rel="stylesheet" />

<style>
    .col-md-4 span {
        color: #000000;
    }

    .form-group label {
        color: #000000;
    }
    
    .blockstyle {
        padding: 0px;
        display: inline-block;
        margin: 10px 10px 0 10px;
        background-color: #fff;
        border: 4px solid #007AFC;
        border-radius: 10px;
        position: relative;
    }

    .box-shad {
        box-shadow: none;
    }

    .dashboard-total {
        color: #000;
        font-size: 14px;
    }

    .dashboard-total {
        width: 80px;
    }

    .k-edit-buttons {
        border-style: none;
    }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
